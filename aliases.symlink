#!/bin/bash

alias ..="cd .."
alias psql="psql -h localhost "

if [[ $(uname) == "Darwin" ]]; then
    ls="gls"
    alias sed="gsed "
    alias sort="gsort "
    alias vim="nvim "
    alias emacs="emacs-24.5 "
elif [[ $(uname) == "Linux" ]]; then
    ls="ls"
fi

alias ls="$ls -F --color "
alias la="$ls -F --color -a "
alias ll="$ls -F --color -l "

alias grep="grep --color "
